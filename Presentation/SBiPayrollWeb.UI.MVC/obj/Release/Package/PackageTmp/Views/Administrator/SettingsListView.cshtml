@model IEnumerable<SBiPayrollWeb.Entities.Setting>

@{
    ViewBag.Title = "Settings";
    int Settings = Model.Count();
}

<h2 class="page-title">Settings [ @Settings ] </h2>

<div>
    @using (Html.BeginForm("CreateSetting", "Administrator", FormMethod.Get, new { enctype = "multipart/form-data", id = "admin-create-setting-form" }))
    { 
        <p>
            <a id="btnSubmitCreateSettingForm" style="cursor: pointer;" title="Create Setting">Create Setting</a>
            @*@Html.ActionLink("Create Setting", "CreateSetting")*@
        </p> 
         
    }
</div>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SSKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SSValue)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SSKey)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SSValue)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>  
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SSKey }) |
            @Html.ActionLink("Details", "Details", new { id=item.SSKey })  |
            @Html.ActionLink("Delete", "Delete", new { id=item.SSKey, description = item.Description  })
        </td>
    </tr>
}

</table>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () { 

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmitCreateSettingForm").on("click", function (e) {

            e.preventDefault();

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#admin-create-setting-form").submit();

        });

    </script>

}









