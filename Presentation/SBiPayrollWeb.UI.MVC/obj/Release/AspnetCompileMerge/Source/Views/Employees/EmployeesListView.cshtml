@model IEnumerable<SBiPayrollWeb.Entities.Employee>

@{
    ViewBag.Title = "Employees";
    int Employees = Model.Count();
}

<h2 class="page-title">Employees [ @Employees ]  </h2>

<p>
    @Html.ActionLink("Create New", "CreateEmployee")
</p>
<table  >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OtherNames)
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.BasicPay)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.IDNo)
        </th>   
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>  
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherNames)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.BasicPay)
        </td>  
        <td>
            @Html.DisplayFor(modelItem => item.IDNo)
        </td>  
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td> 
        <td>
            @Html.ActionLink("Edit", "EditEmployee", new {  EmpNo=item.EmpNo  }) |
            @Html.ActionLink("Details", "EmployeeDetails", new {  EmpNo=item.EmpNo  }) |
            @Html.ActionLink("Delete", "DeleteEmployee", new {  EmpNo=item.EmpNo })
        </td>
    </tr>
}

</table>













@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}










