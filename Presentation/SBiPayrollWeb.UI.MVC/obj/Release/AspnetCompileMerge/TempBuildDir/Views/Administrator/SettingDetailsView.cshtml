@model SBiPayrollWeb.Entities.Setting

@{
    ViewBag.Title = "Setting Details";
    var Setting = Model.Description.ToUpper(); 
}

<h2 class="page-title">Details for - @Setting </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Setting Details</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SSKey)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SSKey)
            @Html.ValidationMessageFor(model => model.SSKey)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SSValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SSValue)
            @Html.ValidationMessageFor(model => model.SSValue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SSValueType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SSValueType)
            @Html.ValidationMessageFor(model => model.SSValueType)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SGroup)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SGroup)
            @Html.ValidationMessageFor(model => model.SGroup)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SSSystem)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SSSystem)
            @Html.ValidationMessageFor(model => model.SSSystem)
        </div>

        
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () { 

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}




